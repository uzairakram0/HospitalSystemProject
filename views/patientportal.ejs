<%- include("partials/header"); -%>
<style type="text/css">
  .top-cloud{
    position: absolute;
    top:200px;
    right: 130px;
  }
</style>
<div id="container">
  <h1> <%= name %> </h1>
  <p> <%= content %> </p>

<h3>Prescriptions</h3>
  <div class="box">
    <% for(var i=0; i < prescriptions.length; i++){ %>
      <div class="item">
        <input type="checkbox">
      <p class="para"><%= prescriptions[i].value %></p>
    </div>
    <% } %>
</div>

<div class="top-cloud">
  <label>Date of birth</label>
  <p> <%= user.DoB %> </p>
  <label>gender</label>
  <p> <%= user.gender %> </p>
  <label>Email</label>
  <p> <%= user.email %> </p>
</div>

</div>

<%- include("partials/footer"); -%>
